{
  "manifest_version": 3,

  "name": "Sísifo ProPro",
  "description": "Esta extensão facilita o protocolo de petições no Projudi TJ/BA",
  "version": "1.0.0",

  "author": "César Rodriguez",

  "action": {
    "default_icon": {
      "16": "sisico-16.png",
      "32": "sisico-32.png",
      "125": "sisico-128.png"
    },
    "default_title": "Sísifo ProPro"
  },

  "permissions": [
    "activeTab",
    "webRequest"
  ],

  "host_permissions": ["https://projudi.tjba.jus.br/*", "*://projudi.tjba.jus.br/*"],

  "background": {
    "service_worker": "backgroundMain.js"
  },

  "content_scripts": [
    {
      "matches": ["https://projudi.tjba.jus.br/*"],
      "all_frames": true,
      "js": ["content.js"]
    }
  ]
}